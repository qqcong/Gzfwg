<?xml version="1.0" encoding="UTF-8"?>
<configuration status="debug" monitorInterval="30">
	<appenders>
		<console name="CONSOLE" target="SYSTEM_OUT">
			<patternLayout charset="UTF-8"
				pattern="%date{yyyy-MM-dd_HH:mm:ss}[%-5level]%logger[%L]-%message%n" />
		</console>

		<rollingFile name="ROLLINGFILE_DEBUG"
			fileName="/data/logs/paybss/paybss.debug.log"
			filePattern="/data/logs/paybss/paybss.debug.log.%date{yyyyMMdd}">
			<filters>
				<thresholdFilter level="info" onMatch="DENY" onMismatch="NEUTRAL" />
				<thresholdFilter level="debug" onMatch="ACCEPT" onMismatch="DENY" />
			</filters>
			<patternLayout charset="UTF-8"
				pattern="%date{yyyy-MM-dd_HH:mm:ss}[%-5level]%logger[%L]-%message%n" />
			<policies>
				<timeBasedTriggeringPolicy />
			</policies>
		</rollingFile>

		<rollingFile name="ROLLINGFILE_INFO"
			fileName="/data/logs/paybss/paybss.info.log"
			filePattern="/data/logs/paybss/paybss.info.log.%date{yyyyMMdd}">
			<filters>
				<thresholdFilter level="warn" onMatch="DENY" onMismatch="NEUTRAL" />
				<thresholdFilter level="info" onMatch="ACCEPT" onMismatch="DENY" />
			</filters>
			<patternLayout charset="UTF-8"
				pattern="%date{yyyy-MM-dd_HH:mm:ss.SSS}[%-5level]%logger[%L]-%message%n" />
			<policies>
				<timeBasedTriggeringPolicy />
			</policies>
		</rollingFile>
		
		<rollingFile name="ROLLINGFILE_WARN"
			fileName="/data/logs/paybss/paybss.warn.log"
			filePattern="/data/logs/paybss/paybss.warn.log.%date{yyyyMMdd}">
			<filters>
                <thresholdFilter level="error" onMatch="DENY" onMismatch="NEUTRAL" />
                <thresholdFilter level="warn" onMatch="ACCEPT" onMismatch="DENY" />
			</filters>
			<patternLayout charset="UTF-8"
				pattern="%date{yyyy-MM-dd_HH:mm:ss.SSS}[%-5level]%logger[%L]-%message%n" />
			<policies>
				<timeBasedTriggeringPolicy />
			</policies>
		</rollingFile>	
			
        <rollingFile name="ROLLINGFILE_ERROR"
                     fileName="/data/logs/paybss/paybss.error.log"
                     filePattern="/data/logs/paybss/paybss.error.log.%date{yyyyMMdd}">
            <filters>
                <thresholdFilter level="error" onMatch="ACCEPT" onMismatch="DENY" />
            </filters>

            <patternLayout charset="UTF-8"
                           pattern="%date{yyyy-MM-dd_HH:mm:ss.SSS}[%-5level]%logger[%L]-%message%n" />
            <policies>
                <timeBasedTriggeringPolicy />
            </policies>
        </rollingFile>


		<async name="ASYNC_DEBUG">
			<appenderRef ref="ROLLINGFILE_DEBUG" />
		</async>
		<async name="ASYNC_INFO">
			<appenderRef ref="ROLLINGFILE_INFO" />
		</async>
		<async name="ASYNC_WARN">
			<appenderRef ref="ROLLINGFILE_WARN" />
		</async>
        <async name="ASYNC_ERROR">
            <appenderRef ref="ROLLINGFILE_ERROR" />
        </async>
	</appenders>

    <loggers>
		<logger name="com.bwoil" level="debug" additivity="false">
			<appender-ref ref="CONSOLE" />
			<appender-ref ref="ASYNC_DEBUG" />
			<appender-ref ref="ASYNC_INFO" />
			<appender-ref ref="ASYNC_WARN" />
            <appender-ref ref="ASYNC_ERROR" />
		</logger> 
		
		<root level="error">
			<appender-ref ref="CONSOLE" />
			<appender-ref ref="ASYNC_DEBUG" />
			<appender-ref ref="ASYNC_INFO" />
			<appender-ref ref="ASYNC_WARN" />
            <appender-ref ref="ASYNC_ERROR" />
		</root>
	</loggers>

</configuration>
